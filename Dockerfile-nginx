# Dockerfile-nginx (Production)
FROM node:12.18.4 as build-stage

WORKDIR /app

# Install Angular CLI
RUN npm install -g @angular/cli@11.0.6

# Copy package files first for better layer caching
COPY package*.json ./

# Install dependencies
RUN npm install

# Copy all source files
COPY . .

# Build Angular app
RUN npm run build -- --prod --output-path=dist/movie-frontend

# Nginx stage
FROM nginx:1.19-alpine

# Copy nginx config from project root
COPY nginx.conf /etc/nginx/conf.d/default.conf

# Remove default nginx website
RUN rm -rf /usr/share/nginx/html/*

# Copy built Angular app
COPY --from=build-stage /app/dist/movie-frontend /usr/share/nginx/html

# Expose port 80
EXPOSE 80

# Start nginx
CMD ["nginx", "-g", "daemon off;"]